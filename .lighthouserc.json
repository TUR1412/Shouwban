{
  "ci": {
    "collect": {
      "startServerCommand": "npm run preview",
      "startServerReadyPattern": "http://localhost:5173",
      "url": [
        "http://localhost:5173/",
        "http://localhost:5173/products.html",
        "http://localhost:5173/product-detail.html?id=P001",
        "http://localhost:5173/cart.html",
        "http://localhost:5173/checkout.html",
        "http://localhost:5173/account.html"
      ],
      "numberOfRuns": 1,
      "settings": {
        "preset": "desktop"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": [
          "warn",
          {
            "minScore": 0.95
          }
        ],
        "categories:accessibility": [
          "warn",
          {
            "minScore": 0.95
          }
        ],
        "categories:best-practices": [
          "warn",
          {
            "minScore": 0.95
          }
        ],
        "categories:seo": [
          "warn",
          {
            "minScore": 0.95
          }
        ]
      }
    },
    "upload": {
      "target": "filesystem",
      "outputDir": ".lighthouseci"
    }
  }
}

